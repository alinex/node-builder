#!/bin/bash

uglify_opts= "-m -c -p relative"

echo "Clean lib folder"
rm -rf lib

echo "Compile coffee to java script"
node_modules/.bin/coffee -c -m -o lib src

echo "Run uglify for each one"
for js in $(find lib -name '*.js'); do
  map=$(echo "$js" | sed -e 's/\.js/.map/')
  node_modules/.bin/uglifyjs $js --in-source-map $uglify_opts $map --source-map $map -o $js
done

echo "Done."
